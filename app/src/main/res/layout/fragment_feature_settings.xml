<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">
    
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#121212"
        android:title="Feature Settings"
        android:titleTextColor="@android:color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Features"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchInvestments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Investments & Portfolio"
                android:padding="12dp"
                android:minHeight="48dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health & Insurance Locker"
                android:padding="12dp"
                android:minHeight="48dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchGifts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gift Tracker"
                android:padding="12dp"
                android:minHeight="48dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchTrips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trip Planner"
                android:padding="12dp"
                android:minHeight="48dp"/>
                
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Family Sharing"
                android:padding="12dp"
                android:minHeight="48dp"/>
                
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchScanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smart Receipt Scanner"
                android:padding="12dp"
                android:minHeight="48dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Work &amp; Job Tracker"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchTrips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trip Planner"
                android:layout_marginBottom="8dp"
                android:minHeight="48dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Changes will take effect immediately, but some UI elements may require an app restart."
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="24dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
