<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Content -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¤– AI Finance Insights"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?colorOnBackground"
                android:layout_marginBottom="16dp" />

            <!-- Portfolio Allocation Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Asset Allocation"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?colorOnSurface" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartAllocation"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Risk Assessment Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Risk Assessment"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?colorOnSurface" />

                    <!-- Risk Level -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Risk Level: "
                            android:textSize="14sp"
                            android:textColor="?colorOnSurface" />

                        <TextView
                            android:id="@+id/textRiskLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="Moderate" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressRisk"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        tools:progress="50" />

                    <TextView
                        android:id="@+id/textRiskDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="13sp"
                        android:textColor="?colorOnSurface"
                        android:alpha="0.7"
                        tools:text="Balanced portfolio with mix of growth and stability." />

                    <!-- Diversification -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diversification: "
                            android:textSize="14sp"
                            android:textColor="?colorOnSurface" />

                        <TextView
                            android:id="@+id/textDiversification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/credit_green"
                            tools:text="Good" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressDiversification"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progressTint="@color/credit_green"
                        tools:progress="70" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Deviations Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDeviations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFF3E0"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸ Areas of Improvement"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#E65100" />

                    <TextView
                        android:id="@+id/textDeviations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="13sp"
                        android:textColor="#BF360C"
                        android:lineSpacingExtra="4dp"
                        tools:text="â€¢ Equity allocation is low.\nâ€¢ High cash is earning low interest." />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- AI Analysis Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?colorPrimary"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ§  AI Analysis"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?colorOnPrimary" />

                    <TextView
                        android:id="@+id/textAiAnalysis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp"
                        android:textColor="?colorOnPrimary"
                        android:alpha="0.9"
                        android:lineSpacingExtra="4dp"
                        tools:text="ðŸ“Š AI Portfolio Analysis\n\nGood progress! Focus on diversifying..." />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Investment Suggestions Card -->

            <!-- Comparison Chart Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invested vs Current Value"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChartComparison"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSuggestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Investment Suggestions"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?colorOnSurface" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerSuggestions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- What-If Scenarios Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWhatIf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”® What-If Scenarios"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See how your investments could grow"
                        android:textSize="12sp"
                        android:textColor="?colorOnSurface"
                        android:alpha="0.6" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerWhatIf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </FrameLayout>

</androidx.core.widget.NestedScrollView>
